<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?attr/colorControlHighlight"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#0BA8FF"
                        android:endColor="#5D0076" />
                </shape>
            </item>
            <item android:drawable="@drawable/baseline_play_arrow_24" android:height="5dp"
                android:width="5dp" android:gravity="center" />
        </layer-list>
    </item>
</ripple>
