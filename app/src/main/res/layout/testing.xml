<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#031E33"
    android:gravity="center"
    android:visibility="visible"
    tools:context="comp3350.exampool.presentation.QuizComplete"
    tools:visibility="visible">
    <include layout="@layout/invalid_add"/>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/completedMessage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Quiz Completed!"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:textSize="40dp"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/scoreTotal"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textSize="40dp"
            android:text="Score"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/buttonRestartQuiz"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:onClick="buttonRestartQuizOnClick"
            android:text="Restart Quiz"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>