<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6DD8E6">

    <Button
        android:id="@+id/ShortAnswerQuestions"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/flashcardimage"
        android:clickable="true"
        android:foreground="@drawable/shortanswercard"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/MultipleChoiceQuestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashcardSelect" />

    <Button
        android:id="@+id/MultipleChoiceQuestions"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/flashcardimage"
        android:clickable="true"
        android:foreground="@drawable/multiplechoicecard"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/LongAnswerQuestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ShortAnswerQuestions" />

    <Button
        android:id="@+id/LongAnswerQuestions"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/flashcardimage"
        android:clickable="true"
        android:foreground="@drawable/lacard"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MultipleChoiceQuestions" />

    <TextView
        android:id="@+id/flashcardSelect"
        android:layout_width="303dp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Select Your Flashcard Type!"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ShortAnswerQuestions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

</androidx.constraintlayout.widget.ConstraintLayout>